<%- include('../partials/header') %>

    <section id="about">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mx-auto">
                    <h2>Editar Série</h2>
                    <form method="post">
                        <div class="form-group">
                            <label for="name">Nome da série</label>
                            <input type="type" value="<%= serie.name %>" class="form-control" id="name" name="name" aria-describedby="nameHelp" placeholder="Informe o nome da série">
                            <small id="nameHelp" class="form-text text-muted">Nome da série a ser salvo</small>
                            <% if (errors && errors.indexOf('name')>=0) { %>
                                <small class="form-text text-muted">Por favor, informe o nome da série</small>
                            <% } %>
                        </div>

                        <div class="form-group">
                            <label for="status">Situação</label>
                            <select class="form-control" id="status" name="status">
                                <% labels.forEach(label => { %>
                                    <option value="<%- label.id %>" <% if (label.id === serie.status) { %> selected="selected" <% } %>><%- label.name %></option>
                                <% }) %>
                            </select>
                        </div>

                        <button type="submit" class="btn btn-info">Salvar</button>
                    </form>
                </div>
            </div>
        </div>
    </section>

<%- include('../partials/footer') %>
